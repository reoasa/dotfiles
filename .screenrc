# Escape key Ctrl-u
escape ^Uu

# don't show startup message
startup_message off

# scrollback buffer
defscrollback 4000

# don't remove windows from the window list as soon as window process exits.
zombie kr #  k: destory window, r: resurrect window

# echo command name whenever a window is created or resurrected.
verbose on

autodetach on
vbell off
defbce on

# encode
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8

# caption
caption always '%?%F%{= gW}%:%{= KW}%?%2n%f%06=%t'
hardstatus alwayslastline '%Y/%m/%d %0c %{= .g}%H%{-} %-w%{= gW}%n %t%{-}%+w'
termcapinfo xterm Z0=\E[?3h:Z1=\E[?3l:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l

# windowlist format
windowlist title  '%{u .g}Num Flags Title%=[0-9] select the number'
windowlist string '%{.g}%3n %{.g}%f%09=%{g} %t %='

# key bind
bind n screen
bind h prev
bind j next
bind l windowlist -b
bind w windowlist -b
